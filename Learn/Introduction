print(f'{medida_em_metros*100}cm')
print(f'{medida_em_metros*1000}cm')


#Exercicio 9 (TABUADA)

numb = int(input('Digite um INTEIRO numero:'))

print("="*30, 'TABUADA',"="*30)
for m in range(0, 11):
    print(f'{numb} x {m} = {numb*m}')
print("="*30, 'FIM',"="*30)


#Exercicio 10 (CONVERSOR DE MOEDA)

